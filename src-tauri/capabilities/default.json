{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "log:default",
    "core:default",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "zsh",
          "cmd": "zsh",
          "args": ["-c", { "validator": ".*" }],
          "sidecar": false
        },
        {
          "name": "bash",
          "cmd": "bash",
          "args": ["-c", { "validator": ".*" }],
          "sidecar": false
        },
        {
          "name": "sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".*" }],
          "sidecar": false
        }
      ]
    },
    "shell:allow-execute",
    "shell:allow-kill",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-load",
    "sql:allow-close",
    "dialog:default",
    "dialog:allow-open",
    "core:path:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "log:default"
  ]
}