{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "My Little Apps",
  "version": "0.1.0",
  "identifier": "com.artsiomshaitar.my-little-apps",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "My Little Apps",
        "width": 1125,
        "height": 812,
        "minWidth": 875,
        "minHeight": 625,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:my-little-apps.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/*": "./"
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
